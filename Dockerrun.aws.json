{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
            "name": "db-setup",
            "host": {
                "sourcePath": "/var/app/current/initdb.d"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "correct-ocr-backend",
            "image": "282251075226.dkr.ecr.eu-west-1.amazonaws.com/correct-ocr-backend:latest",
            "essential": true,
            "memory": 512,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 5000
                }
            ]
        },
        {
            "name": "db",
            "image": "mysql:latest",
            "essential": true,
            "memory": 128,
            "command": "--default-authentication-plugin=mysql_native_password",
            "portMappings": [
                {
                    "hostPort": 3306,
                    "containerPort": 3306
                }
            ],
            "links": [
                "correct-ocr-backend"
            ],
            "mountPoints": [
                {
                    "sourceVolume": "db-setup",
                    "containerPath": "/docker-entrypoint-initdb.d",
                    "readOnly": false
                }
            ]
        }
    ]
}